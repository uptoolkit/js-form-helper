{
  "name": "js-form-helper",
  "version": "1.0.7",
  "description": "Js form helper based on Laravel validation format for back-end and front-end errors",
  "types": "types",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "typings": "types/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
